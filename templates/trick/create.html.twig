{% extends 'prime.html.twig' %}

{% block body %}
    <main class="container mt-5">
        <div class="row">
            <div class="col-12 my-4">
                <h1>Créer un nouveau trick</h1>
            </div>
            <div class="col-12">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.slug) }}
                {{ form_row(form.category) }}
                {{ form_row(form.featuredText) }}
                {{ form_row(form.description) }}
                {{ form_row(form.imageFile) }}
                <div>
                    <button class="btn btn-dark">Créer</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}

